{
  "name": "xcon-test-thingsboard-widget",
  "version": "1.0.0",
  "description": "XCons Widget - TypeScript Development Kit",
  "main": "dist/widget.js",
  "scripts": {
    "dev": "vite --config vite.config.dev.js",
    "serve": "vite --config vite.config.dev.js --mode development --host",
    "build:dev": "vite build --mode development --config vite.config.dev.js",
    "build:prod": "vite build --mode production --config vite.config.js",
    "build": "vite build --config vite.config.js",
    "preview": "vite preview --config vite.config.dev.js --port 4201",
    "clean": "rimraf dist",
    "start": "npm run dev",
    "start:full": "concurrently \"npm run build:dev -- --watch\" \"npm run preview\"",
    "health": "curl -s http://localhost:4201/health | json_pp || echo 'Server not running'"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.0",
    "@types/node": "^20.0.0",
    "@xcons/common": "^2.0.11",
    "@xcons/core": "^2.0.1",
    "@xcons/vite-plugin": "^1.1.94",
    "@xcons/widget": "^1.3.15",
    "typescript": "~5.5.2",
    "vite": "^7.1.5"
  },
  "keywords": [
    "xcon",
    "xcon-studio",
    "widget",
    "typescript",
    "xcon-development-kit",
    "thingsboard"
  ],
  "author": "XCon Studio Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xcon-studio/xcon-web-widget-template-basic-thingsboard.git"
  },
  "homepage": "https://github.com/xcon-studio/xcon-web-widget-template-basic-thingsboard#readme",
  "bugs": {
    "url": "https://github.com/xcon-studio/xcon-web-widget-template-basic-thingsboard/issues"
  }
}
